<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF3F0"
    tools:context=".ui.MainActivity">


    <Button
        android:id="@+id/button3"

        style="@style/button_theme_action"
    android:drawableLeft="@drawable/bttn_icon_change"
        android:drawableTint="@color/white"
        android:layout_marginBottom="164dp"
        android:text="@string/txt_ingresar_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.29"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="343dp"
        android:layout_height="190dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="140dp"
        app:layout_constraintDimensionRatio="16:9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linear_layout"
        android:layout_width="320dp"
        android:layout_height="112dp"
        android:layout_marginStart="52dp"
        android:layout_marginBottom="240dp"
        android:background="@drawable/rounded_linear_layout"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <EditText
            android:id="@+id/txt_usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:maxLines="1"
            android:background="@drawable/rounded_edittext_background"
            android:drawableLeft="@drawable/user_circle_24"
            android:drawableTint="@color/white"
            android:gravity="center"
            android:hint="Usuario "

            android:textColorHint="#32FFFF"
            android:textSize="21sp"

            />


        <EditText
            android:id="@+id/txt_pass"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_edittext_background"
            android:drawableLeft="@drawable/baseline_password_24"
            android:drawableTint="@color/white"
            android:gravity="center"
            android:hint="ContraseÃ±a "
            android:textColorHint="#32FFFF"
            android:textSize="21sp" />


      <com.google.android.material.textfield.TextInputLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"

/>

        <EditText
            android:id="@+id/editTextUserna"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_edittext_background"
            android:drawableLeft="@drawable/user_circle_24"
            android:drawableTint="@color/white"
            android:gravity="center"
            android:hint="Usuario "

            android:textColorHint="#32FFFF"
            android:textSize="21sp"

            />



    </androidx.appcompat.widget.LinearLayoutCompat>



    <Button
        style="@style/button_theme_action"

        android:id="@+id/btn_login"

        android:layout_marginBottom="164dp"
        android:text="Login"
        android:textColor="#32FFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.743"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="217dp"
        android:layout_height="114dp"
        android:layout_marginStart="144dp"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/anton"
        android:text="My App"
        android:textSize="50sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
